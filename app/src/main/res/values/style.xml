<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextColor">#eb4034</item>
        <item name="startIconTint">#eb4034</item>
        <item name="boxStrokeColor">@color/black</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintTextColor">@color/black</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>


    <style name="UserAuthCard" parent="CardView">
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="TopUserAuthCard" parent="CardView">
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="cardCornerRadius">5dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="ToolBarTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="singleLine">true</item>
    </style>


</resources>