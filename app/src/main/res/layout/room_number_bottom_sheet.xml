        />


    <View
        android:id="@+id/view13"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/custom_dark_ash"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_bookingDetails_Room22Text_textView" />


    <TextView
        android:id="@+id/fragment_bookingDetails_Room24Text_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Room No. 24"
        android:textColor="@color/custom_dark_ash"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view13" />

    <CheckBox
        android:id="@+id/fragment_bookingDetails_Room24_RadioButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_margin="20dp"
        android:checked="false"
        android:buttonTint="@color/btn_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view13"
        style="@android:style/Widget.DeviceDefault.Light.CompoundButton.RadioButton"
        />


    <View
        android:id="@+id/view14"
        android:layout_width="match_parent"
