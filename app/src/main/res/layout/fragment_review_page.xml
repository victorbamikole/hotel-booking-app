<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/reviewPageDesign"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.review.ReviewPageFragment"

    >
    <!--    profile toolbar-->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_review_page_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:elevation="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_vertical"
            android:text="Ratings"
            android:textColor="@color/profile_text_dark"
            android:textSize="24sp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>
    <View
        android:id="@+id/shadow_view"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:layout_height="4dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_review_page_toolbar"
        android:background="@drawable/custom_drawable_shadow" />
    <TextView
        android:id="@+id/fragment_review_page_tv_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/post"
        android:textStyle="bold"
        android:layout_margin="20dp"
        android:textColor="@color/custom_dark_ash"
        app:layout_constraintTop_toBottomOf="@id/fragment_review_page_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/fragment_review_page_tv_tapToStarRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tap_to_star_your_rate"
        android:textSize="@dimen/small_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_review_page_star_view_container"
        />
    <LinearLayout
        android:id="@+id/fragment_review_page_star_view_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/fragment_review_page_tv_post"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
<!--        <RatingBar-->
<!--            android:id="@+id/ratingBar1"-->
<!--            style="@style/reviewRatingBar"-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:numStars="5"-->
<!--            android:stepSize="0.01"-->
<!--            android:isIndicator="true"-->
<!--            />-->
        <View
            android:id="@+id/fragment_review_page_star_view_1"
            android:layout_height="24dp"
            android:layout_width="24dp"
            android:background="@drawable/ic_baseline_star_24"
            />
        <View
            android:id="@+id/fragment_review_page_star_view_2"
            android:layout_height="24dp"
            android:layout_width="24dp"
            android:background="@drawable/ic_baseline_star_24"
            />
        <View
            android:id="@+id/fragment_review_page_star_view_3"
            android:layout_height="24dp"
            android:layout_width="24dp"
            android:background="@drawable/ic_baseline_star_24"
            />
        <View
            android:id="@+id/fragment_review_page_star_view_4"
            android:layout_height="24dp"
            android:layout_width="24dp"
            android:background="@drawable/ic_baseline_star_24"
            />
        <View
            android:id="@+id/fragment_review_page_star_view_5"
            android:layout_height="24dp"
            android:layout_width="24dp"
            android:background="@drawable/ic_baseline_star_24"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/fragment_review_page_tv_writeAReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:text="@string/write_a_review"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/custom_orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_review_page_tv_tapToStarRating" />

    <TextView
        android:id="@+id/fragment_review_page_tv_averageRating"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:text="@string/_4_5"
        android:textColor="@color/custom_orange"
        android:textSize="45sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_review_page_tv_writeAReview" />

    <LinearLayout
        android:id="@+id/fragment_review_page_star_fiveSmallView_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toTopOf="@id/fragment_review_page_tv_averageRating"
        app:layout_constraintStart_toEndOf="@id/fragment_review_page_tv_averageRating"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <View
            android:id="@+id/fragment_review_page_star_fiveSmallView_1"
            android:layout_height="12dp"
            android:layout_width="12dp"
            android:background="@drawable/ic_baseline_star_24"
            />
        <View
            android:id="@+id/fragment_review_page_star_fiveSmallView_2"
            android:layout_height="12dp"
            android:layout_width="12dp"
            android:background="@drawable/ic_baseline_star_24"
            />
        <View
            android:id="@+id/fragment_review_page_star_fiveSmallView_3"
            android:layout_height="12dp"
            android:layout_width="12dp"
            android:background="@drawable/ic_baseline_star_24"
            />
        <View
            android:id="@+id/fragment_review_page_star_fiveSmallView_4"
            android:layout_height="12dp"
            android:layout_width="12dp"
            android:background="@drawable/ic_baseline_star_24"
            />
        <View
            android:id="@+id/fragment_review_page_star_fiveSmallView_5"
            android:layout_height="12dp"
            android:layout_width="12dp"
            android:background="@drawable/ic_baseline_star_24"
            />
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/fragment_review_page_star_fiveSmallView_progressBar"
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:paddingEnd="10dp"
            android:layout_marginStart="20dp"
            app:indicatorColor="@color/custom_orange"
            app:trackColor="@color/custom_light_ash"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fragment_review_page_star_fourSmallView_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginStart="62dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_review_page_star_fiveSmallView_container"
        app:layout_constraintStart_toEndOf="@id/fragment_review_page_tv_averageRating"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <View
            android:id="@+id/fragment_review_page_star_smallView_2"
            android:layout_height="12dp"
            android:layout_width="12dp"
            android:background="@drawable/ic_baseline_star_24"
            />
        <View
            android:id="@+id/fragment_review_page_star_smallView_3"
            android:layout_height="12dp"
            android:layout_width="12dp"
            android:background="@drawable/ic_baseline_star_24"
            />
        <View
            android:id="@+id/fragment_review_page_star_smallView_4"
            android:layout_height="12dp"
            android:layout_width="12dp"
            android:background="@drawable/ic_baseline_star_24"
            />
        <View
            android:id="@+id/fragment_review_page_star_smallView_5"
            android:layout_height="12dp"
            android:layout_width="12dp"
            android:background="@drawable/ic_baseline_star_24"
            />
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/fragment_review_page_star_fourSmallView_progressBar"
            android:layout_width="200dp"
            android:layout_marginStart="20dp"
            android:layout_gravity="center"
            android:paddingEnd="10dp"
            app:indicatorColor="@color/custom_orange"
            app:trackColor="@color/custom_light_ash"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fragment_review_page_star_threeSmallView_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginStart="74dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_review_page_star_fourSmallView_container"
        app:layout_constraintStart_toEndOf="@id/fragment_review_page_tv_averageRating"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal">

    <View
        android:id="@+id/fragment_review_page_star_threeSmallView_3"
        android:layout_height="12dp"
        android:layout_width="12dp"
        android:background="@drawable/ic_baseline_star_24"
        />
    <View
        android:id="@+id/fragment_review_page_star_threeSmallView_4"
        android:layout_height="12dp"
        android:layout_width="12dp"
        android:background="@drawable/ic_baseline_star_24"
        />
    <View
        android:id="@+id/fragment_review_page_star_threeSmallView_5"
        android:layout_height="12dp"
        android:layout_width="12dp"
        android:background="@drawable/ic_baseline_star_24"
        />
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/fragment_review_page_star_threeSmallView_progressBar"
        android:layout_width="200dp"
        android:layout_marginStart="20dp"
        android:layout_gravity="center"
        app:indicatorColor="@color/custom_orange"
        android:paddingEnd="10dp"
        app:trackColor="@color/custom_light_ash"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fragment_review_page_star_twoSmallView_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginStart="86dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_review_page_star_threeSmallView_container"
        app:layout_constraintStart_toEndOf="@id/fragment_review_page_tv_averageRating"
        app:layout_constraintEnd_toEndOf="parent"
        >
    <View
        android:id="@+id/fragment_review_page_star_twoSmallView_4"
        android:layout_height="12dp"
        android:layout_width="12dp"
        android:background="@drawable/ic_baseline_star_24"
        />
    <View
        android:id="@+id/fragment_review_page_star_twoSmallView_5"
        android:layout_height="12dp"
        android:layout_width="12dp"
        android:background="@drawable/ic_baseline_star_24"
        />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/fragment_review_page_star_twoSmallView_progressBar"
        android:layout_width="200dp"
        android:layout_marginStart="20dp"
        android:layout_gravity="center"
        android:paddingEnd="10dp"
        app:indicatorColor="@color/custom_orange"
        app:trackColor="@color/custom_light_ash"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/fragment_review_page_star_oneSmallView_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_marginStart="98dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_review_page_star_twoSmallView_container"
        app:layout_constraintStart_toEndOf="@id/fragment_review_page_tv_averageRating"
        app:layout_constraintEnd_toEndOf="parent"
        >


    <View
        android:id="@+id/fragment_review_page_star_oneSmallView_5"
        android:layout_height="12dp"
        android:layout_width="12dp"
        android:background="@drawable/ic_baseline_star_24"
        />

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/fragment_review_page_star_oneSmallView_progressBar"
        android:layout_width="200dp"
        android:layout_marginStart="20dp"
        android:layout_gravity="center"
        android:paddingEnd="10dp"
        app:indicatorColor="@color/custom_orange"
        app:trackColor="@color/custom_light_ash"
        android:layout_height="wrap_content"/>

    </LinearLayout>
<TextView
    android:id="@+id/fragment_review_page_tv_outOfFive"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginTop="10dp"
    android:text="@string/out_of_5"
    android:textStyle="bold"
    android:textColor="@color/custom_light_ash"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/fragment_review_page_tv_averageRating"
    />
    <TextView
        android:id="@+id/fragment_review_page_tv_twentyFiveRatings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:text="@string/_25_ratings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_review_page_tv_averageRating"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_review_page_tv_twentyFiveRatings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/fragment_review_page_recycler_view_layout"
        />

</androidx.constraintlayout.widget.ConstraintLayout>