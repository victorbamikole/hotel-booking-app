<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/fragment_review_page_recycler_personProfile_container"
        android:layout_width="0dp"
        android:weightSum="100"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        >
        <androidx.cardview.widget.CardView
            android:id="@+id/fragment_review_page_recycler_personProfile_card"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="15dp"
            >
            <ImageView
                android:id="@+id/fragment_review_page_recycler_imageView_personProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/userImage"
                />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:id="@+id/fragment_review_page_recycler_personName_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            >
        <TextView
            android:id="@+id/fragment_review_page_recycler_tv_personName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/kara_james"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/review_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/feb_2020"
            android:textColor="@color/custom_light_ash"
            android:textStyle="bold"
            />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/fragment_review_page_star_view_container"
            android:layout_width="0dp"
            android:layout_weight="90"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:gravity="end"
            android:layout_gravity="end"
            >
            <RatingBar
                android:id="@+id/fragment_review_page1_star_view_ratingBar1"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="0.5"
                android:rating="3.5"
                android:progressTint="@color/custom_orange"
                android:isIndicator="true"
                />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/fragment_review_page_recycler_tv_userReview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/fragment_review_page_recycler_personProfile_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>